{
  "files.exclude": {
    "**/.git": true,
    "**/build": true,
    "**/.mypy_cache": true,
    "**/.pytest_cache": true,
    "**/__pycache__": true,
    "**/*.egg-info": true
  },
  "editor.formatOnSave": true,
  "python.editor.defaultFormatter": "ms-python.black-formatter",
  "black-formatter.args": [
    "--line-length",
    "100"
  ]
}